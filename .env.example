# InternalKnowledgeHub Environment Configuration
# Copy this file to .env and update values

# ===================
# Application Settings
# ===================
FLASK_APP=app.main:create_app
FLASK_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# ===================
# Database Settings
# ===================
# SQLite for development
DATABASE_URL=sqlite:///./data/app.db

# PostgreSQL for production (uncomment and configure)
# DATABASE_URL=postgresql://postgres:postgres@db:5432/knowledge_hub

# ===================
# Redis Settings
# ===================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===================
# Ollama Settings
# ===================
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3
OLLAMA_EMBED_MODEL=nomic-embed-text

# Low VRAM mode (set to 0 to disable GPU)
OLLAMA_NUM_GPU=99
OLLAMA_KEEP_ALIVE=5m

# ===================
# ChromaDB Settings
# ===================
CHROMA_HOST=chroma
CHROMA_PORT=8000
CHROMA_PATH=./data/chroma

# ===================
# File Storage Settings
# ===================
UPLOAD_PATH=./data/uploads
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=pdf,docx,md,txt

# ===================
# JWT Settings
# ===================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=15
JWT_REFRESH_TOKEN_EXPIRES=10080

# ===================
# RAG Settings
# ===================
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=128
RAG_TOP_K=5
RAG_HYBRID_ALPHA=0.7

# ===================
# CORS Settings
# ===================
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost

# ===================
# Logging Settings
# ===================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===================
# Frontend Settings (Vite)
# ===================
VITE_API_URL=http://localhost:8000
VITE_APP_TITLE=InternalKnowledgeHub
